# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/campus_connect
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-here
JWT_REFRESH_EXPIRES_IN=30d

# Email Service Configuration
# This Gmail account is your APP's service account for sending emails TO users
# Users will receive emails FROM this account, but they don't need Gmail accounts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-app-service-account@gmail.com
SMTP_PASS=your-app-password-here

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Rate Limiting Configuration
# Balanced settings for campus networks with multiple users per IP
# Window: 10 minutes (600,000 ms) | Max: 750 requests per window
# Supports ~30-50 concurrent users per IP (typical dorm/campus network)
# Total capacity: ~4,500 requests/hour per IP address
RATE_LIMIT_WINDOW_MS=600000
RATE_LIMIT_MAX_REQUESTS=750

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000

# External Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
UNIVERSITY_API_KEY=your-university-api-key
WHOIS_API_KEY=your_whois_api_key_here

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log 

# Development Options
# Set to 'true' to automatically verify emails during development (bypasses email sending)
AUTO_VERIFY_EMAILS=false 
AUTO_VERIFY_EMAILS=false 

# Mobile Push Notifications
# Apple Push Notification Service (APNs)
APN_KEY_ID=your_apn_key_id
APN_TEAM_ID=your_apn_team_id
APN_PRIVATE_KEY=./certs/AuthKey.p8
APN_BUNDLE_ID=com.campuskinect.app

# Firebase Cloud Messaging (FCM) for Android
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project"}

# Mobile App Configuration
MOBILE_IMAGE_MAX_SIZE=52428800
MOBILE_IMAGE_COMPRESSION_QUALITY=80
MOBILE_OFFLINE_SYNC_LIMIT=1000
MOBILE_CACHE_TTL=300

# Camera and Image Processing
CAMERA_UPLOAD_PATH=./uploads/camera
THUMBNAIL_SIZE=300
MAX_IMAGE_DIMENSION=2048

# Mobile Analytics
MOBILE_ANALYTICS_ENABLED=true
MOBILE_ANALYTICS_BATCH_SIZE=100 